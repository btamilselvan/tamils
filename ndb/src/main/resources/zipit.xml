<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bundle</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory> <!-- setting true will place the war file inside ndb (cos ndb is base directory) sub-directory in the bundle -->
	<fileSets>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.war</include>
			</includes>
			<outputDirectory>.</outputDirectory><!-- used to copy the war file either directly in the bundle or in a sub-directory in the bundle -->
		</fileSet>
		<fileSet>
			<directory>src/main/resources/aws</directory>
			<outputDirectory>.</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>